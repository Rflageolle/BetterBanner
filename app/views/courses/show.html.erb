  <p id="notice"><%= notice %></p>
  <section class="hero">
    <div class="box">
      <div class="hero-head">
        <label class="title"><%= @course.name %></label>
      </div>
      <div class="hero-body">
        <div class="content">
          <div class="columns is-gapless">
            <div class="column is-4 is-offset-one">
              <label class="subtitle">Department:</label>
            </div>
            <div class="columns is-gapless">
              <div class="column">
                <label class="label has-text-weight-semibold"><%= @course.department %></label>
              </div>
            </div>
          </div>
        </div>
        <div class="content">
          <div class="columns is-gapless">
            <div class="column is-4 is-offset-one">
              <label class="subtitle">Number:</label>
            </div>
            <div class="column">
              <label class="label has-text-left has-text-weight-semibold"><%= @course.number %></label>
            </div>
          </div>
        </div>

        <div class="content">
          <div class="columns is-gapless">
            <div class="column is-4 is-offset-one">
              <label class="subtitle">Credit Hours:</label>
            </div>
            <div class="column is-4 is-offset-one">
              <label class="label has-text-weight-semibold"><%= @course.credit_hours %></label>
            </div>
          </div>
        </div>
        <button class="button"><%= link_to 'Edit', edit_course_path(@course) %></button>
        <button class="button"><%= link_to 'Back', courses_path %></button>

      </div>

      <div class="hero-foot">
        <div class="columns">
          <div class="column is-5 is-offset-one"
          <% unless @course.sections.empty? %>
            <label class="subtitle">Sections:</label>
            <div class="content">
            <% @course.sections.each do |section| %>
              <div class="box"><%= link_to "Semester: #{section.semester} -> 00#{section.number}", section %></div>
            <% end %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
