<p id="notice"><%= notice %></p>

<p>
  <strong>Semester:</strong>
  <%= @section.semester %>
</p>

<p>
  <strong>Number:</strong>
  <%= @section.number %>
</p>

<p>
  <strong>Course:</strong>
  <%= @section.course.name %>
</p>

<p>
  <strong>Room number:</strong>
  <%= @section.room_number %>
</p>

<% if @section.students.size > 0 %>
  <% @course.students.each do |student| %>
  <%= render student %>
  <% end %>
<% end %>

